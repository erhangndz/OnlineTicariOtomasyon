@using EntityLayer.Concrete;
@model List<BillItem>
@{
    ViewData["Title"] = "BillDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3 class="container">Fatura Kalemleri</h3>

<br />
<table class="table table-hover">

    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Adet</th>
        <th>Birim Fiyat</th>
        <th>Toplam Tutar</th>
        <th>İşlemler</th>



    </tr>

    @foreach (var item in Model)
    {
        count++;


        <tr>
            <th>@count</th>
            <td>@item.Description</td>
            <td>@item.Number</td>
            <td>@item.UnitPrice</td>
            <td>@item.Price</td>
      

            <td>

                <a href="/Bill/UpdateBillItem/@item.BillItemID" class="btn btn-dark">Düzenle</a>

               
            </td>
        </tr>
    }
</table>
<br />
<a href="/Bill/AddBillItem/" class="btn btn-dark">Yeni Fatura Kalemi Girişi</a>



