@using EntityLayer.Concrete;
@model Current
@{
    ViewData["Title"] = "AddCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Cari Ekleme Sayfası</h3>
<br />
<form method="post">

    <label>Cari Adı</label>
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    <p class="text-danger"> @Html.ValidationMessageFor(x=>x.Name)</p>
    <br />
    <label>Cari Soyadı</label>
    @Html.TextBoxFor(x=>x.Surname,new {@class="form-control"})
    <p class="text-danger">
        @Html.ValidationMessageFor(x=>x.Surname)</p>
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(x=>x.City,new {@class="form-control"})
    <p class="text-danger">
            @Html.ValidationMessageFor(x=>x.City)</p>
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x=>x.Mail,new {@class="form-control"})
    <p class="text-danger">
                @Html.ValidationMessageFor(x=>x.Mail)</p>
    <br />
 
    <button class="btn btn-dark">Kaydet</button>

</form>


