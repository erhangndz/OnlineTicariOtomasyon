@model List<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3 class="container">Kategoriler</h3>

<br />
<table class="table table-hover">

    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    
    @foreach (var item in Model)
    {
        count++;

    <tr>
        <th>@count</th>
        <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-secondary" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?'); " Silmek İstediğinize Emin misiniz?">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-dark">Düzenle</a></td>
    </tr>
    }
</table>
<br />
<a href="/Category/AddCategory/" class="btn btn-dark">Yeni Kategori Ekle</a>

