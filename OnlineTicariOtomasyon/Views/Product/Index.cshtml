@using EntityLayer.Concrete;
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Ürünler</h3>

<br />
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.ProductName</td>
            <td>@item.Brand</td>
            <td>@item.Stock</td>
            <td>@item.PurchasePrice</td>
            <td>@item.SalePrice</td>
            <td>@item.Category.CategoryName</td>
            <td><img src="@item.Image" style="width:75px;height:75px"></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-info">Düzenle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Product/AddProduct/" class="btn btn-primary">Yeni Ürün Ekle</a>
